<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "PhaseBoot", root_path, id: "logo", class: "pull-left" %>
      <nav class="pull-right">
        <form class="navbar-search pull-left">
            <%= select :cohort, :cohort_id, Cohort.all.map{|cohort|[cohort.name, cohort.id]} %>
            <input type="text" class="search-query" placeholder="Search by name">
          </form>
          <ul class="nav">
            <% if current_user %>

            <li><%= link_to "Edit Profile", edit_user_path(current_user.id) %></li>
            <li><%= link_to "Sign Out", signout_path %></li>
            <% else %>
            <li><%= link_to "Sign in with Github!", "/auth/github", :class => "btn-auth btn-github"%></li>
            <% end %>

            

        </ul>
      </nav>
    </div>
  </div>
</header>
