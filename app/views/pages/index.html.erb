<% if current_user %>
	<%= render '/pages/search' %>
	<div class="search-box">
	<%= render '/pages/results', :users => @users %>
	</div>
<% else %>
<div class="name_img_span">

 

  <%= link_to image_tag('l-arrow.png', :class => 'l-arrow'), "#" %>
  <%= link_to image_tag('r-arrow.png', :class => 'r-arrow'), "#"  %>
  
 	<div class="featured_users">
    <% @users.each do |user| %>
      <div class="featured_user">
        <div class="profile_img">
 		     <img src="<%= user.photo %>" alt="<%= user.nickname %>" />
          <span><%= user.name %></span>
        </div>
        <p>&ldquo;<%= user.advice %>&rdquo;</p>
      </div>
    <% end %>
	</div>


</div>
<% end %> 
